                                        {

                                            @*Diary1*@
                                            <tr id="d + @i">
                                                <td>
                                                    <h2>@entry.Title</h2>
                                                    <h5><span class="glyphicon glyphicon-time"></span>@entry.Date.ToString()</h5>
                                                    <h5><span class="label label-success">@entry.Mood</span></h5><br>
                                                    <p id="f + @i++">
